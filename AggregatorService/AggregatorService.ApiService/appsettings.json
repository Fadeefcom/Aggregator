{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=my_db;Username=postgres;Password=your_password"
  },
  "AllowedHosts": "*",
  "Alerting": {
    "Rules": [
      {
        "Type": "Price",
        "Symbol": "BTCUSD",
        "MinPrice": 55000,
        "MaxPrice": 65000
      },
      {
        "Type": "Volume",
        "Multiplier": 3.0
      }
    ]
  },
  "AggregatorSettings": {
    "WebSocketUri": "ws://loadgenerator/ws/stream",
    "AllowedSymbols": [ "BTCUSD", "ETHUSD", "SOLUSD" ],
    "BatchSize": 1000,
    "StatusSaveIntervalSeconds": 5,
    "AlertFilePath": "alerts.log"
  }
}
